[colors]
;background = ${xrdb:color0:#222}
background = #000000
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #999
foreground-alt = #333
primary = #FFF 
secondary = #91B362
alert = #EA6C73

[bar/bspwm]
locale = es_MX.UTF-8
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 29
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #FFFFFF

border-bottom-size = 1
border-color = #222222

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = Noto Sans:pixelsize=16:antialias=true;2
font-1 = Noto Sans CJK JP:pixelsize=16:antialias=true;2
font-2 = "Font Awesome 5 Free:pixelsize=16:antialias=true;2"
font-3 = "Font Awesome 5 Free Solid:pixelsize=16:antialias=true;2"

modules-left = bspwm
modules-center = mpd
modules-right = pulseaudio wlan eth battery-combined-udev date 

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm

override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = #222222
label-focused-foreground = #FFFFFF
label-focused-underline= #FFFFFF
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = #BBBBBB
label-occupied-padding = 2

label-urgent = %index%
label-urgent-background = #A1F0C6
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = #333333
label-empty-padding = 2

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <toggle> <icon-next>
host = "127.0.0.1"

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 50 
label-song-ellipsis = true

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 2.0

format-connected = <label-connected>
;format-connected =  <label-connected>
;format-connected-underline = #55aa55
label-connected = %{A1:networkmanager_dmenu:}%{A}

format-disconnected = <label-disconnected>
;format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.foreground-alt} 
label-disconnected = %{A1:networkmanager_dmenu:}%{A}
label-disconnected-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected =%{A1:networkmanager_dmenu:}%{A}

format-disconnected =
;format-disconnected = 
format-disconnected-foreground = ${colors.foreground-alt}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5
date =
date-alt = "%a %d/%m/%y"
time = %H:%M
time-alt = %H:%M

#format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #DFDFDF

label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
#label-volume=%{A3:pavucontrol:}%percentage%%{A}
label-volume = %percentage%
label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted = 
label-muted-foreground = #666

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label = %percentage%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input

format = <label>
format-warn = <label-warn>
format-warn-underline = #EA6C73

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/title]
type = internal/xwindow
format = <label>
format-padding = 0
label = %title%
label-maxlen = 20

[module/battery-combined-udev]
type = custom/script
exec = ~/.config/polybar/scripts/battery-combined-udev.sh
tail = true

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%
#format-underline = ${colors.blue}

exec = ~/.config/polybar/scripts/pulseaudio-control.bash listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-control.bash togmute
click-middle = ~/.config/polybar/scripts/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/scripts/pulseaudio-control.bash down
label-padding = 2
label-foreground = ${colors.foreground}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

